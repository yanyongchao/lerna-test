{
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "version": "0.0.0",
  "command": {
    "version": {
      "allowBranch": ["master", "main"],
      "message": "chore(versions): ðŸ˜Š publish %s",
      "includeMergedTags": true,
      "exact": true
    },
    "publish": {
      "registry": "http://10.0.3.86:8081/nexus/repository/npm-host/"
    }
  },
  "packages": ["packages/*"],
  "ignoreChanges": [
    "**/*.md",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.e2e.ts",
    "**/demos/**",
    "**/coverage/**",
    "**/fixtures/**",
    "**/dist/**",
    "**/lib/**",
    "**/esm/**",
    "**/test/**"
  ]
}
